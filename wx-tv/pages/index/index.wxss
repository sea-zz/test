/**index.wxss**/
.scrollarea {
    width: 100%;
    padding: 10rpx 20rpx;
    box-sizing: border-box;
    color: #192338;
}
.form {
    top: 0;
    left: 0;
    right: 0;
    display: flex; 
    justify-content: space-between;
    align-items: center;
}
.input-container {
    display: flex;
    align-items: center;
    width: calc(100vw - 40rpx);
    height: 100rpx;
    box-sizing: border-box;
}
.input-container input {
    flex: 1; 
    border-radius: 4px; 
    border: 1px solid rgb(231, 231, 231);
    padding: 10rpx 20rpx;
}

.input-container button {
    font-size: 30rpx;
    margin-left: 32rpx;
}
.list-container .search-list {
    height: calc(100vh - 100rpx);
    overflow-y: scroll;
}
.list-container .all-item {
    display: flex;
    flex-direction: row;
    height: calc(100vh - 100rpx);
    overflow-y: scroll;
}
.list-container .left {
    width: 30%;
    box-sizing: border-box;
    height: calc(100vh - 100rpx);
    overflow-y: auto;
}
.list-container .left .left-item {
    width: 100%;
    height: 80rpx;
    display: flex;
    align-items: center;
    justify-content: flex-start;
    border-right: 1px solid #ccc;
    border-bottom: 1px solid #ccc;
    box-sizing: border-box;
}
.list-container .left .left-item:first-child {
    border-top: 1px solid #ccc;
}
.list-container .left .left-item.select {
    border-right: none;
    background-color: rgba(7, 193, 96, .06);
    color: #07c160;
}
.list-container .right {
    width: 70%;
    height: calc(100vh - 100rpx);
    overflow-y: auto;
}
.list-container .total {
    color: #ccc;
    margin-left: 10px;
    display: inline-block;
    height: 20px;
    line-height: 20px;
    margin-bottom: 10px;
}